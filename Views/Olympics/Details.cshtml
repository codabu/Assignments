@model CountryViewModel
@{
    ViewData["Title"] = "Team Details";
}

<h2 class="text-center p-2">Team Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.LogoImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Game:  @Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport / Type: @Model.Country.Sport.Name</h4>
            </li>
            <li class="list-group-item">
                <a asp-action="Countries" asp-route-activeGame="@Model.ActiveGame"
                   asp-route-activeSport="@Model.ActiveSport">Return to Home Page</a>
            </li>
        </ul>
    </div>
</div>